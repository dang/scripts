##
# These are development related aliases.
function cppgrep {
	if [ -z "${1}" ]; then
		echo "usage: ${FUNCNAME} <regex>"
		return 1
	fi
	find . "(" -name "*.c" -or -name "*.cc" -or -name "*.cpp" ")" -exec egrep --color=auto -H "$@" "{}" ";"
}
function hppgrep {
	if [ -z "${1}" ]; then
		echo "usage: ${FUNCNAME} <regex>"
		return 1
	fi
	find . "(" -name "*.h" -or -name "*.hpp" ")" -exec egrep --color=auto -H "$@" "{}" ";"
}
function chppgrep {
	if [ -z "${1}" ]; then
		echo "usage: ${FUNCNAME} <regex>"
		return 1
	fi
	find . "(" -name "*.[ch]" -or -name "*.cc" -or -name "*.[ch]pp" ")" -exec egrep --color=auto -H "$@" "{}" ";"
}
function cgrep {
	if [ -z "${1}" ]; then
		echo "usage: ${FUNCNAME} <regex>"
		return 1
	fi
	find . -name "*.c" -exec egrep --color=auto -H "$@" "{}" ";"
}
function chgrep {
	if [ -z "${1}" ]; then
		echo "usage: ${FUNCNAME} <regex>"
		return 1
	fi
	find . -name "*.[ch]" -exec egrep --color=auto -H "$@" "{}" ";"
}
function hgrep {
	if [ -z "${1}" ]; then
		echo "usage: ${FUNCNAME} <regex>"
		return 1
	fi
	find . -name "*.h" -exec egrep --color=auto -H "$@" "{}" ";"
}
function jgrep {
	if [ -z "${1}" ]; then
		echo "usage: ${FUNCNAME} <regex>"
		return 1
	fi
	find . -name "*.java" -exec egrep --color=auto -H "$@" "{}" ";"
}
function dgrep {
	local pattern=$1
	shift
	if [ -z "${pattern}" ]; then
		echo "usage: ${FUNCNAME} <file-patten> <regex>"
		return 1
	fi
	find . -type f -name "*${pattern}*" -exec egrep --color=auto -H "$@" "{}" ";"
}
function igrep {
	local pattern=$1
	shift
	if [ -z "${pattern}" ]; then
		echo "usage: ${FUNCNAME} <file-patten> <regex>"
		return 1
	fi
	find . -type f -iname "*${pattern}*" -exec egrep --color=auto -H "$@" "{}" ";"
}
function grepall {
	if [ -z "${1}" ]; then
		echo "usage: ${FUNCNAME} <regex>"
		return 1
	fi
	find . -type f -regextype posix-extended ! \( -regex '.*\.ko' -o -regex '.*\.o' -o -regex '.*cscope.*' -o -regex '.*tags.*' -o -regex '.*\.orig' -o -regex '.*\.rej' -o -regex '.*CVS.*' -o -regex '.*\.#maketags.dfg' -o -regex '.*\.svn.*' -o -regex '.*\.git.*' \) -exec egrep --color=auto -H "$@" "{}" ";"
}
function grepdir {
	local dir=$1
	shift
	if [ -z "${dir}" ]; then
		echo "usage: ${FUNCNAME} <dir> <regex>"
		return 1
	fi
	find ${dir} -type f -regextype posix-extended ! \( -regex '.*\.ko' -o -regex '.*\.o' -o -regex '.*cscope.*' -o -regex '.*tags.*' -o -regex '.*\.orig' -o -regex '.*\.rej' -o -regex '.*CVS.*' -o -regex '.*\.#maketags.dfg' -o -regex '.*\.svn.*' -o -regex '.*\.git.*' \) -exec egrep --color=auto -H "$@" "{}" ";"
}
function cleanuppatch {
	find . -name "*.orig" -exec rm {} \;
	find . -name "*.rej" -exec rm {} \;
}
function vimreject {
	vim -O ${1}?(.rej)
}
function findfile {
	find . -iname "*${*}*"
}

