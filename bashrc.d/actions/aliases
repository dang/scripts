function mktbz {
	if [ -z "$1" ]; then
		echo "Usage: mktbz <directory> [<tbzname>]"
		return 1
	fi
	local dirname="$1"
	if [ -n "$2" ]; then
		local tbzname="$2"
	else
		local tbzname="${dirname%/}.tar.bz2"
	fi
	${SUDO} apack "${tbzname}" "${dirname}"
}
function mktgz {
	if [ -z "$1" ]; then
		echo "Usage: mktgz <directory> [<tbzname>]"
		return 1
	fi
	local dirname="$1"
	if [ -n "$2" ]; then
		local tgzname="$2"
	else
		local tgzname="${dirname%/}.tar.gz"
	fi
	${SUDO} apack "${tgzname}" "${dirname}"
}
