#set horizontal-scroll-mode On
$if cgdb
	set editing-mode emacs
$else
	set editing-mode vi
$endif
set completion-ignore-case On

set keymap vi-move
	"n": backward-char
	"u": previous-history
	"e": next-history
	"i": forward-char
	"f": non-incremental-reverse-search-history-again
	"F": non-incremental-forward-search-history-again
	"h": vi-undo
	"H": revert-line
	"k": vi-end-word
	"K": vi-end-word
	"s": vi-insertion-mode
	"S": vi-insert-beg
set keymap vi-command
	"n": backward-char
	"u": previous-history
	"e": next-history
	"i": forward-char
	"f": non-incremental-reverse-search-history-again
	"F": non-incremental-forward-search-history-again
	"h": vi-undo
	"H": revert-line
	"k": vi-end-word
	"K": vi-end-word
	"s": vi-insertion-mode
	"S": vi-insert-beg
