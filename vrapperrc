" Auto indent
set autoindent
" Keep tabs as tabs
set noexpandtab

set wildignorecase

" Mappings for Colemak
" No langmap in vrapper
"set langmap=nh,ej,il,uk,fn,ke,si,hu,HU,jf
noremap n h
noremap e j
noremap i l
noremap u k
noremap f n
noremap k e
noremap s i
noremap h u
noremap H U
noremap j f
" end of vim's langmap

" No splits
"nnoremap N n
"nnoremap E e
"nnoremap U u
"nnoremap I i

nnoremap F N
nnoremap S I
nnoremap K E
nnoremap <C-E> <C-F>
nnoremap <C-U> <C-B>
vnoremap <C-E> <C-F>
vnoremap <C-U> <C-B>
